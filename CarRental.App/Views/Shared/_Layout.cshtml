@using Microsoft.AspNetCore.Http;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | CarRental</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/car_rental.css" />
    <link rel="stylesheet" href="~/fontawesome-free-6.0.0-beta3-web/css/fontawesome.css">
    <link rel="stylesheet" href="~/fontawesome-free-6.0.0-beta3-web/css/brands.css" >
    <link rel="stylesheet" href="~/fontawesome-free-6.0.0-beta3-web/css/solid.css" >

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-info box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand text-white" asp-controller="Car" asp-action="Index">CarRental</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 flex-row-reverse">
                        <li class="nav-item">
                            @if (Context.Session.GetString("Username") != null)
                            {
                                <a class="nav-link text-white" asp-controller="User" asp-action="Logout">Logout</a>
                                
                            }
                            else
                            {
                                <a class="nav-link text-white" asp-controller="User" asp-action="Login">Login</a>
                            }
                        </li>

                        @if (Context.Session.GetString("Username") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="User" asp-action="Details">@Context.Session.GetString("Username")</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-info footer text-muted">
        <div class="container">
            &copy; 2022 - CarRental
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
