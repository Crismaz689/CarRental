@model CarRental.App.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container">
        <div class="form-header">
            <img src="~/img/login.png" class="img-fluid d-block mx-auto" width="128" height="128" alt="login thumbnail" />
        </div>
        <div class="row form-container">
        <form asp-action="Login" class="form-login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group text-center my-4">
                <input asp-for="Username" placeholder="Enter username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group text-center mt-4">
                <input asp-for="Password" placeholder="Enter password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                Don't have an account? <a asp-action="Create" asp-controller="User" class="text-info font-weight-bold">Register</a>
            </div>
            <div class="form-group mt-5 d-flex align-items-center justify-content-center">
                <input type="submit" value="Login" class="btn btn-primary btn-lg w-50" />
            </div>
            <span class="text-danger">@ViewBag.Message</span>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
