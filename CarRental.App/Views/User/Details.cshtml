@model CarRental.Database.Entities.User

@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "User details";
}

<div class="container">
    <div class="form-header">
        <img src="~/img/user.png" class="img-fluid d-block mx-auto" width="128" height="128" alt="login thumbnail" />
    </div>
    <div class="form-container">
        <form asp-action="Edit" asp-route-id="@Context.Session.GetInt32("Id")" class="form-login">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group text-center mt-4 col-6">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" value="@Model.Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group text-center mt-4 col-6">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" value="@Model.FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group text-center mt-4 col-6">
                    <label asp-for="Surname"></label>
                    <input asp-for="Surname" value="@Model.Surname" class="form-control" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <div class="form-group text-center mt-4 col-6">
                    <label asp-for="Pesel"></label>
                    <input asp-for="Pesel" value="@Model.Pesel" class="form-control" />
                    <span asp-validation-for="Pesel" class="text-danger"></span>
                </div>
                <div class="form-group text-center mt-4 col-12">
                    <label asp-for="Balance"></label>
                    <input asp-for="Balance" value="@Model.Balance" class="form-control" />
                    <span asp-validation-for="Balance" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group d-flex align-items-center justify-content-center mt-5">
                <input type="submit" value="Save changes" class="btn btn-primary btn-lg w-50" />
            </div>
        </form>
    </div>
    <h1>Renting list</h1>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
