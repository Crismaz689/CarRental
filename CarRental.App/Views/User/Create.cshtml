@model CarRental.App.Models.UserRegistrationViewModel

@{
    ViewData["Title"] = "Create an account";
}

<div class="container">
    <div class="form-header">
        <img src="~/img/register.png" class="img-fluid d-block mx-auto" width="128" height="128" alt="login thumbnail" />
    </div>
    <div class="form-container">
        <form asp-action="Create" class="form-login">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group text-center mt-4 col-6">
                    <input asp-for="Username" placeholder="Enter username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group text-center mt-4 col-6">
                    <input asp-for="Password" type="password" placeholder="Enter password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group text-center mt-4 col-6">
                    <input asp-for="ConfirmPassword" type="password" placeholder="Enter password" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group text-center mt-4 col-6">
                    <input asp-for="FirstName" placeholder="Enter first name" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group text-center mt-4 col-6">
                    <input asp-for="Surname" placeholder="Enter surname" class="form-control" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <div class="form-group text-center mt-4 col-6">
                    <input asp-for="Pesel" placeholder="Enter pesel" class="form-control" />
                    <span asp-validation-for="Pesel" class="text-danger"></span>
                </div>
                <div class="form-group text-center mt-4 col-6">
                    <input asp-for="Balance" placeholder="Enter balance" class="form-control" />
                    <span asp-validation-for="Balance" class="text-danger"></span>
                </div>
                <div class="form-group text-center mt-4 col-6">
                    <label>
                        <input type="radio" asp-for="Gender" value="false" checked /> Male
                    </label>
                    <label>
                        <input type="radio" asp-for="Gender" value="true" /> Female
                    </label>
                </div>
            </div>
            <div class="form-group text-center">
                Already have an account? <a asp-action="Login" asp-controller="User" class="text-info font-weight-bold">Log in</a>
            </div>
            <div class="form-group d-flex align-items-center justify-content-center">
                <input type="submit" value="Create" class="btn btn-primary btn-lg w-50" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
